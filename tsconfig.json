{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "ESNext",
    "strict": true,
    "rootDir": "./src",
    "lib": [
      "dom",
      "esnext"
    ],
    "noImplicitAny": false,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
